.detailimg
{
    width:100%;
    height:350rpx;
}

.container
{
    display: flex;
    flex-direction: column;
}

.auth-container
{
    flex-direction: row;
    width: 100%;
    height: 100rpx;
}
.audio{
    width: 102rpx;
    height: 90rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;
}
.post-author
{
    width: 60rpx;
    height: 60rpx;
}

.post-title
{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-date
{
    width: 20rpx;
    margin-bottom: 10px;
    margin-left: 30px;
    font-size: 26rpx;
}
.tool {
  margin-top: 20rpx;
}
.post-like
{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}
.post-like-image
{
    width: 90rpx;
    height: 90rpx;
}
.horizon {
    margin-top: 8px;
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top: 46rpx;
    margin: 0 auto;
    z-index: -99;
}
.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 50rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

